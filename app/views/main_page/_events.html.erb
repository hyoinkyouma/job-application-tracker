<div class="p-5 h-[90vh]">
  <h1 class="text-4xl text-white my-2">Scheduled Interviews:</h1>
  <div class="max-h-[90%] overflow-y-scroll p-5">
    <% events.each do |event|%>
      <ul class="p-2">
        <%= link_to "/", class: "block w-full p-6  border rounded-lg shadow-md  bg-gray-900 border-gray-700 hover:bg-gray-700" do %>
          <h5 class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"><%=event.title%></h5>
          <p class="font-normal text-gray-700 dark:text-gray-400"><%= Job.find(event.job_id)[:job_title] %></p>
          <p class="font-normal text-gray-700 dark:text-gray-400"><%= event.date_of_event %></p>
          <p class="font-normal text-gray-700 dark:text-gray-400"><%= event.description %></p>
        <%end%>
      </ul>
    <%end%>
  </div>
</div>
